<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800"
        Loaded="MainWindow_Loaded"
        Closed="MainWindow_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <!-- רקע הדרגתי עדין -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#F3F6FD" Offset="0.0"/>
            <GradientStop Color="#FDE4EC" Offset="1.0"/>
            <!--<GradientStop Color="#F3F6FD" Offset="0.0"/>
            <GradientStop Color="#FDE4EC" Offset="1.0/>-->
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#5C6BC0"/>

            <!--<Setter Property="Background" Value="#EC407A"/>-->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- סגנון תוויות -->
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- סגנון לטקסטבוקסים -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="plum"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <!-- הקוד שלך בדיוק כמו ששלחת - לא שונה כלל -->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Clock Area (Left) -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="20">
            <Label Content="System Clock" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Label Name="SystemClockLabel"  Margin="0,0,0,10" Content="{Binding CurrentTime}" FontWeight="Bold" FontSize="20"/>

            <Button Content="Advance Minute" Width="150" Height="40" Margin="0,0,0,10" Click="AdvanceMinute_Click"/>
            <Button Content="Advance Hour" Width="150" Height="40" Margin="0,0,0,10" Click="AdvanceHour_Click"/>
            <Button Content="Advance Day" Width="150" Height="40" Margin="0,0,0,10" Click="AdvanceDay_Click"/>
            <Button Content="Advance Month" Width="150" Height="40" Margin="0,0,0,10" Click="AdvanceMonth_Click"/>
            <Button Content="Advance Year" Width="150" Height="40" Click="AdvanceYear_Click"/>
        </StackPanel>

        <!-- Config Area (Right) -->
        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20">
            <Label Content="Configuration" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Label Content="Risk Range (minutes)" FontSize="14" Margin="0,0,0,5"/>
            <TextBox Name="RiskRangeTextBox" Width="200" Height="30" Margin="0,0,0,10" HorizontalAlignment="Left"  Text="{Binding RiskRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Update Config" Width="150" Height="40" Click="UpdateConfig_Click"/>
        </StackPanel>

        <!-- Buttons Row -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="60,10,0,138">
            <Button Content="Handle Volunteers" Width="150" Height="40" Margin="10,0" Click="HandleVolunteers_Click"/>
            <Button Content="Handle Calls" Width="150" Height="40" Margin="10,0" Click="HandleCalls_Click"/>
            <Button Content="Initialize DB" Width="150" Height="40" Margin="10,0" Click="InitializeDB_Click"/>
            <Button Content="Reset DB" Width="150" Height="40" Margin="10,0" Click="ResetDB_Click"/>
        </StackPanel>
    </Grid>
</Window>
