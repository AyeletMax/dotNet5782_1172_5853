<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="Call Management" Height="700" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Call ID - Only visible in edit mode -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="Call ID:" Width="150" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Width="300" Height="30" Text="{Binding CurrentCall.Id}" IsReadOnly="True"/>
            </StackPanel>

            <!-- Call Type -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Call Type:" Width="150" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <ComboBox Width="300" Height="30"
                          ItemsSource="{Binding AvailableCallTypes}"
                          SelectedItem="{Binding CurrentCall.MyCallType, Mode=TwoWay}"
                          IsEnabled="{Binding CanEditDetails}"/>
            </StackPanel>

            <!-- Address -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Address:" Width="150" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Width="300" Height="30" 
                         Text="{Binding CurrentCall.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         IsReadOnly="{Binding CannotEditDetails}"/>
            </StackPanel>

            <!-- Verbal Description -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Verbal Description:" Width="150" FontWeight="SemiBold" VerticalAlignment="Top"/>
                <TextBox Width="300" Height="80" 
                         Text="{Binding CurrentCall.VerbalDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" AcceptsReturn="True" MaxLength="500" 
                         IsReadOnly="{Binding CannotEditDetails}"/>
            </StackPanel>

            <!-- Max Finish Time -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Max Finish Time:" Width="150" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <DatePicker Width="300" Height="30"
                            SelectedDate="{Binding CurrentCall.MaxFinishTime, Mode=TwoWay}" 
                            IsEnabled="{Binding CanEditMaxFinishTime}"/>
            </StackPanel>

            <!-- Call Status -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Status:" Width="150" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Width="300" Height="30" Text="{Binding CurrentCall.MyStatus}" IsReadOnly="True"/>
            </StackPanel>

            <!-- Open Time -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Open Time:" Width="150" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Width="300" Height="30" Text="{Binding CurrentCall.OpenTime, StringFormat='dd/MM/yyyy HH:mm:ss'}" IsReadOnly="True"/>
            </StackPanel>

            <!-- Assignments -->
            <GroupBox Grid.Row="7" Header="Call Assignments" Margin="0,10" 
                      Visibility="{Binding HasAssignments, Converter={StaticResource BooleanToVisibilityConverter}}">
                <DataGrid ItemsSource="{Binding CurrentCall.CallAssignments}" 
                          AutoGenerateColumns="False" IsReadOnly="True" MaxHeight="200">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Start Time" Binding="{Binding EntranceTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                        <DataGridTextColumn Header="End Time" Binding="{Binding ExitTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                        <DataGridTextColumn Header="Finish Type" Binding="{Binding FinishCallType}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Edit Permission Info -->
            <TextBlock Grid.Row="8" HorizontalAlignment="Center" Margin="0,10" FontStyle="Italic">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CanEditDetails}" Value="True">
                                <Setter Property="Text" Value="All fields can be edited"/>
                                <Setter Property="Foreground" Value="Green"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CanEditOnlyMaxTime}" Value="True">
                                <Setter Property="Text" Value="Only maximum finish time can be edited"/>
                                <Setter Property="Foreground" Value="Orange"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CannotEdit}" Value="True">
                                <Setter Property="Text" Value="Call is closed or expired - editing not allowed"/>
                                <Setter Property="Foreground" Value="Red"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Buttons -->
            <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="{Binding ButtonText}" Width="120" Height="40" 
                        Click="btnAddUpdate_Click" IsEnabled="{Binding CanEdit}"/>
                <Button Content="Cancel" Width="120" Height="40" Margin="20,0,0,0" 
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
    

