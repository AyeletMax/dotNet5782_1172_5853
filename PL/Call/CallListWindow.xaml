<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Call Management" Height="600" Width="1200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter and Sort Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="LightGray">
            <Label Content="Sort By:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox ItemsSource="{Binding SortFields}" 
                      SelectedItem="{Binding SelectedSortField}"
                      Width="150" Margin="5"/>

            <Label Content="Filter by Status:" VerticalAlignment="Center" Margin="15,5,5,5"/>
            <ComboBox ItemsSource="{Binding StatusTypes}" 
                      SelectedItem="{Binding SelectedStatusFilter}"
                      Width="120" Margin="5"/>

            <Label Content="Filter by Call Type:" VerticalAlignment="Center" Margin="15,5,5,5"/>
            <ComboBox ItemsSource="{Binding CallTypes}" 
                      SelectedItem="{Binding SelectedCallTypeFilter}"
                      Width="150" Margin="5"/>

            <Button Content="Add Call" Click="btnAdd_Click" 
                    Width="80" Height="30" Margin="20,5,5,5"
                    Background="LightGreen"/>
        </StackPanel>

        <!-- Calls List -->
        <ListView Grid.Row="1" ItemsSource="{Binding CallList}" 
                  SelectedItem="{Binding SelectedCall}" 
                  MouseDoubleClick="lsvCallList_MouseDoubleClick"
                  Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call ID" DisplayMemberBinding="{Binding CallId}" Width="80"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding CallType}" Width="150"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding MyStatus}" Width="120"/>
                    <GridViewColumn Header="Open Time" DisplayMemberBinding="{Binding OpenTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="140"/>
                    <GridViewColumn Header="Time Remaining" DisplayMemberBinding="{Binding TimeRemainingToCall}" Width="120"/>
                    <GridViewColumn Header="Last Volunteer" DisplayMemberBinding="{Binding LastVolunteer}" Width="150"/>
                    <GridViewColumn Header="Completion Time" DisplayMemberBinding="{Binding CompletionTime}" Width="120"/>
                    <GridViewColumn Header="Total Allocations" DisplayMemberBinding="{Binding TotalAllocations}" Width="120"/>

                    <!-- Delete Button Column -->
                    <GridViewColumn Header="Delete" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="DeleteButton_Click"
                                        Background="LightCoral" 
                                        Width="60" Height="25">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding MyStatus}" Value="Opened">
                                                    <DataTrigger.Setters>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger.Setters>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding MyStatus}" Value="Opened"/>
                                                        <Condition Binding="{Binding TotalAllocations}" Value="0"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <MultiDataTrigger.Setters>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                    </MultiDataTrigger.Setters>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Cancel Assignment Button Column -->
                    <GridViewColumn Header="Cancel Assignment" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cancel" Click="CancelAssignmentButton_Click"
                                        Background="Orange" 
                                        Width="80" Height="25">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding MyStatus}" Value="InProgress">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding MyStatus}" Value="InProgressAtRisk">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>