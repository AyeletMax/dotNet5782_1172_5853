<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             xmlns:conv="clr-namespace:PL.Converters"
             StartupUri="Login/LoginWindow.xaml">
    <Application.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:CallTypeCollection x:Key="CallTypeCollection" />
        <local:CallStatusCollection x:Key="CallStatusCollection" />
        <local:VolunteerSortFieldCollection x:Key="VolunteerSortFieldCollection" />
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <conv:EditModeButtonTextConverter x:Key="EditModeButtonTextConverter"/>
        <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:SimulatorButtonContentConverter x:Key="SimulatorButtonContentConverter"/>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

    </Application.Resources>
</Application>