<Window x:Class="PL.Call.OpenCallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="קריאות פתוחות" Height="600" Width="800">

    <StackPanel>

        <!-- עריכת כתובת נוכחית של המתנדב -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="הכתובת הנוכחית שלך:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding CurrentAddress, Mode=TwoWay}" Width="250" Margin="0,0,10,0"/>
            <Button Content="עדכן כתובת" Click="UpdateAddress_Click" />
        </StackPanel>

        <!-- סינון ומיון -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="סינון לפי סוג קריאה:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <!--<ComboBox ItemsSource="{Binding Source={StaticResource VolunteerSortFieldCollection}}"
                      SelectedItem="{Binding FilterStatus, Mode=TwoWay}"
                      Width="150"
                      Margin="0,0,20,0"
                      SelectionChanged="FilterOrSort_Changed"/>-->
            <ComboBox ItemsSource="{Binding CallTypes}"
          SelectedItem="{Binding FilterStatus, Mode=TwoWay}"
          Width="150"
          Margin="0,0,20,0"
          SelectionChanged="FilterOrSort_Changed"/>

            <TextBlock Text="מיון לפי:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <!--<ComboBox ItemsSource="{Binding Source={StaticResource OpenCallInListCollection}}"
                      SelectedItem="{Binding SortField, Mode=TwoWay}"
                      Width="150"
                      SelectionChanged="FilterOrSort_Changed"/>-->
            <ComboBox ItemsSource="{Binding SortFields}"
          SelectedItem="{Binding SortField, Mode=TwoWay}"
          Width="150"
          SelectionChanged="FilterOrSort_Changed"/>
        </StackPanel>

        <!-- טבלת קריאות -->
        <DataGrid ItemsSource="{Binding OpenCalls}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  SelectionChanged="DataGrid_SelectionChanged"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call Number" Binding="{Binding Id}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Call Type" Binding="{Binding MyCallType}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Opening Time" Binding="{Binding OpenTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Max Finish Time" Binding="{Binding MaxFinishTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="130" IsReadOnly="True"/>
                <DataGridTextColumn Header="Distance (KM)" Binding="{Binding distanceFromVolunteerToCall, StringFormat=F2}" Width="80" IsReadOnly="True"/>

                <DataGridTemplateColumn Header="פעולה" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="בחר" Click="SelectCall_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- תיאור קריאה נבחרת -->
        <Border Margin="10" Padding="10" Background="#FFEFEFEF" CornerRadius="8"
                Visibility="{Binding SelectedCall, Converter={StaticResource  NullToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="תיאור הקריאה שנבחרה:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding SelectedDescription}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

    </StackPanel>
</Window>