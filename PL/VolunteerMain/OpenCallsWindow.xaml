<Window x:Class="PL.Call.OpenCallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Open Calls" Height="600" Width="800"
        FlowDirection="LeftToRight">
    <!-- מוסיף יישור שמאלי -->

    <Window.Resources>
        <CollectionViewSource x:Key="VolunteerFieldCollection" Source="{Binding VolunteerFields}" />
        <CollectionViewSource x:Key="OpenCallFieldCollection" Source="{Binding OpenCallFields}" />
        <BooleanToVisibilityConverter x:Key="NotNullToVisible" />
    </Window.Resources>

    <StackPanel>

        <!-- Edit current volunteer address -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Your current address:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding CurrentAddress, Mode=TwoWay}" Width="250" Margin="0,0,10,0"/>
            <Button Content="Update Address" Click="UpdateAddress_Click" />
        </StackPanel>

        <!-- Filtering and sorting -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Filter by call type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding VolunteerFields}"
                      SelectedItem="{Binding FilterStatus, Mode=TwoWay}"
                      Width="150"
                      Margin="0,0,20,0"
                      SelectionChanged="FilterOrSort_Changed"/>

            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding OpenCallFields}"
                      SelectedItem="{Binding SortField, Mode=TwoWay}"
                      Width="150"
                      SelectionChanged="FilterOrSort_Changed"/>
        </StackPanel>

        <!-- Call table -->
        <DataGrid ItemsSource="{Binding OpenCalls}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  SelectionChanged="DataGrid_SelectionChanged"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Address" Binding="{Binding FullAddress}" Width="200"/>
                <DataGridTextColumn Header="Call Type" Binding="{Binding Type}" Width="100"/>
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding DistanceFromVolunteer}" Width="100"/>

                <DataGridTemplateColumn Header="Action" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Select" Click="SelectCall_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Selected call description -->
        <Border Margin="10" Padding="10" Background="#FFEFEFEF" CornerRadius="8"
                Visibility="{Binding SelectedCall, Converter={StaticResource NotNullToVisible}}">
            <StackPanel>
                <TextBlock Text="Selected call description:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding SelectedDescription}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

    </StackPanel>
</Window>
