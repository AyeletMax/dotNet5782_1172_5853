<Window x:Class="PL.Call.OpenCallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Open Calls" Height="600" Width="800">
    <StackPanel>
        <!-- Current volunteer address -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Your current address:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding CurrentAddress, Mode=TwoWay}" Width="250" Margin="0,0,10,0"/>
            <Button Content="Update Address" Click="UpdateAddress_Click" />
        </StackPanel>

        <!-- Filter and sort -->
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Filter by call type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding CallTypes}"
                      SelectedValue="{Binding FilterStatus, Mode=TwoWay}"
                      Width="150"
                      Margin="0,0,20,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding SortFields}"
                      SelectedValue="{Binding SortField, Mode=TwoWay}"
                      Width="150">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- Calls table -->
        <DataGrid ItemsSource="{Binding OpenCalls}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  SelectionChanged="DataGrid_SelectionChanged"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call Number" Binding="{Binding Id}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Call Type" Binding="{Binding MyCallType}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Opening Time" Binding="{Binding OpenTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Max Finish Time" Binding="{Binding MaxFinishTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="130" IsReadOnly="True"/>
                <DataGridTextColumn Header="Distance (KM)" Binding="{Binding distanceFromVolunteerToCall, StringFormat=F2}" Width="80" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Action" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Select" Click="SelectCall_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Selected call description -->
        <Border Margin="10" Padding="10" Background="#FFEFEFEF" CornerRadius="8"
                Visibility="{Binding SelectedCall, Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Selected call description:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding SelectedDescription}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Window>