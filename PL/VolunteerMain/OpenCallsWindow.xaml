<Window x:Class="PL.Call.OpenCallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        xmlns:conv="clr-namespace:PL.Converters"
        Title="Open Calls" Height="600" Width="800">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Current address -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
            <TextBlock Text="Current Address:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding CurrentAddress, Mode=TwoWay}" Width="250" Margin="0,0,10,0"/>
            <Button Content="Update Address" Click="UpdateAddress_Click"/>
        </StackPanel>

        <!-- Filters -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="1">
            <TextBlock Text="Call Type Filter:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding CallTypes}" SelectedValue="{Binding FilterStatus, Mode=TwoWay}" Width="150" Margin="0,0,20,0"/>
            <TextBlock Text="Sort By:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding SortFields}" SelectedValue="{Binding SortField, Mode=TwoWay}" Width="150"/>
        </StackPanel>

        <!-- Calls table -->
        <DataGrid ItemsSource="{Binding OpenCalls}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  SelectionChanged="DataGrid_SelectionChanged"
                  Grid.Row="2"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Type" Binding="{Binding MyCallType}" Width="100"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Open Time" Binding="{Binding OpenTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="120"/>
                <DataGridTextColumn Header="Max Finish Time" Binding="{Binding MaxFinishTime, StringFormat='dd/MM/yyyy HH:mm'}" Width="130"/>
                <DataGridTextColumn Header="Distance (KM)" Binding="{Binding distanceFromVolunteerToCall, StringFormat=F2}" Width="100"/>
                <DataGridTemplateColumn Header="Action" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Select" Click="SelectCall_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Call description -->
        <Border Grid.Row="3"
                Background="#FFEFEFEF"
                Padding="10"
                CornerRadius="5"
                Visibility="{Binding IsCallSelected, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Description:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding SelectedDescription}" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

